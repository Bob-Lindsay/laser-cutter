#!/usr/bin/env ruby
require File.expand_path('../../lib/laser_cutter', __FILE__)
require File.expand_path('../../lib/laser_cutter/cli/parser', __FILE__)
require 'pp'

parser = LaserCutter::CLI::Parser.new
options = parser.parse(*ARGV)

pp options

if options[:help]
  puts parser.to_s
end

exit

begin
  Laser::Cutter::Renderer::LayoutRenderer.new(config).render
  if config.open
    `open #{config.file}`
  end
rescue Exception => e
  STDERR.puts "Whoops, #{e.message}".red
  if config.verbose
    STDERR.puts e.backtrace.join("\n").red
  end
end


